<%- include('partials/_header') -%>
<main class="page login-page">
    <section class="clean-block clean-form dark" style="background: rgb(0,0,0);">
        <div class="container" style="font-family: UnifrakturMaguntia, cursive;">
            <div class="block-heading" style="color: #F5D10D;">
                <h1 style="/*color: #f5d10d;*/font-family: UnifrakturMaguntia, cursive;/*border-color: #f5d10d;*/">Log
                    In</h1>
            </div>
            <form action="/login" method="POST">
                <div class="mb-3"><label class="form-label" for="user"
                        style="font-family: UnifrakturMaguntia, cursive;font-size: 30px;">Username</label><input
                        class="form-control item" type="text" name="username" placeholder="Username" id="username" autofocus required></div>
                <div class="mb-3"><label class="form-label" for="pass"
                        style="font-family: UnifrakturMaguntia, cursive;font-size: 30px;">Password</label><input
                        class="form-control" type="password" name="password" placeholder="Password" id="password" required></div>
                <div class="mb-3">
                </div>
                <button class="btn btn-primary" type="submit value="Login">Log In</button><a href="/signup" class="btn btn-primary">Sign Up</a>
            </form>
        </div>
    </section>
</main>
<%- include('partials/_footer') -%>