<%- include('partials/_header') -%>

<section class="clean-block clean-catalog dark" style="background: rgb(255, 255, 255);color: rgb(0, 0, 0);">
    <section class="container content-section">
        <div class="block-heading">
            <h1 class="display-2" style="font-family: UnifrakturMaguntia, cursive;color: #F5D10D;">Store</h1>
        </div>
        
        <div class="content">
            <div class="row">
                <div class="col" style="font-size: 16px;">
                    <div class="d-none d-md-block">
                        <div class="filters" style="font-family: Montserrat, sans-serif;text-align: left;">
                            <div class="filter-item">
                                <h3 style="font-family: Montserrat, sans-serif;">Categorias</h3>
                                <div class="form-check"><input class="form-check-input" type="checkbox" id="formCheck-1"><label class="form-check-label" for="formCheck-1" style="font-family: Montserrat, sans-serif;">Targeta de regalo</label></div>
                                <div class="form-check"><input class="form-check-input" type="checkbox" id="formCheck-2"><label class="form-check-label" for="formCheck-2" style="font-family: Montserrat, sans-serif;">Kit de tintas</label></div>
                            </div>
                        </div>
                    </div>
                    <div class="d-md-none"><a class="btn btn-link d-md-none filter-collapse" data-bs-toggle="collapse" aria-expanded="false" aria-controls="filters" href="#filters" role="button" style="color: rgb(0,0,0);text-align: justify;border-style: none;">FILTRO<i class="icon-arrow-down filter-caret"></i></a>
                        <div class="collapse" id="filters">
                            <div class="filters" style="font-family: Montserrat, sans-serif;text-align: left;">
                                <div class="filter-item">
                                    <h3 style="font-family: Montserrat, sans-serif;">Categorias</h3>
                                    <div class="form-check"><input class="form-check-input" type="checkbox" id="formCheck-1"><label class="form-check-label" for="formCheck-1" style="font-family: Montserrat, sans-serif;">Targeta de regalo</label></div>
                                    <div class="form-check"><input class="form-check-input" type="checkbox" id="formCheck-2"><label class="form-check-label" for="formCheck-2" style="font-family: Montserrat, sans-serif;">Kit de tintas</label></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="products shop-items">
                        <div class="row g-0 justify-content-center" style="font-size: 16px;">
                            <div class="col-12 col-md-6 col-lg-4">
                                <div class="clean-product-item shop-item" style="font-family: Montserrat, sans-serif;">
                                    <div class="shop-item">
                                        <span class="shop-item-title">Album 1</span>
                                        <img class="shop-item-image img-fluid d-block mx-auto image" src="resources/assets/img/WhatsApp%20Image%202021-04-13%20at%204.59.44%20PM.jpeg?h=a24d070a036c9031737b447d19a74176">
                                        <div class="shop-item-details">
                                            <span class="shop-item-price">$12.99</span>
                                            <button class="btn btn-primary shop-item-button" type="button">ADD TO CART</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-md-6 col-lg-4" style="font-family: Montserrat, sans-serif;">
                                <div class="clean-product-item" style="font-family: Montserrat, sans-serif;">
                                    <div class="shop-item">
                                        <span class="shop-item-title">Album 2</span>
                                        <img class="shop-item-image img-fluid d-block mx-auto image" src="resources/assets/img/Giftcard.jpg?h=2bc59d5c216a737fb8abcd4c4cb7c195">
                                        <div class="shop-item-details">
                                            <span class="shop-item-price">$14.99</span>
                                            <button class="btn btn-primary shop-item-button"type="button">ADD TO CART</button>
                                        </div>
                                    </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
              </div>
              <section class="container content-section">
                <h2 class="section-header">CART</h2>
                <div class="cart-row">
                    <span class="cart-item cart-header cart-column">ITEM</span>
                    <span class="cart-price cart-header cart-column">PRICE</span>
                    <span class="cart-quantity cart-header cart-column">QUANTITY</span>
                </div>
                <div class="cart-items"></div>
                <div class="cart-total">
                    <strong class="cart-total-title">Total</strong>
                    <span class="cart-total-price">$0</span>
                </div>
                <button class="btn btn-primary btn-purchase" type="button">PURCHASE</button>
            </section>
        </div>
    </section>
</section>
       

<%- include('partials/_footer') -%>